{
    "name": "vdx-vscode",
    "displayName": "Vault Developer eXperience",
    "description": "VS Code integration for the vdx CLI tool",
    "version": "0.3.7",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vdx.login",
                "title": "VDX: Login to Vault"
            },
            {
                "command": "vdx.pull",
                "title": "VDX: Pull from Vault"
            },
            {
                "command": "vdx.push",
                "title": "VDX: Push to Vault"
            },
            {
                "command": "vdx.pushDryRun",
                "title": "VDX: Push to Vault (Dry Run)"
            },
            {
                "command": "vdx.package",
                "title": "VDX: Create and Validate Package"
            },
            {
                "command": "vdx.clean",
                "title": "VDX: Clean Local Cache"
            },
            {
                "command": "vdx.showChangesInUI",
                "title": "VDX: Show Local Changes in UI"
            }
        ],
        "configuration": {
            "title": "VDX",
            "properties": {
                "vdx.projectPath": {
                    "type": "string",
                    "default": "",
                    "description": "The absolute path to the root of your vdx project directory."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "@typescript-eslint/parser": "^6.4.0",
        "eslint": "^8.47.0",
        "typescript": "^5.1.6"
    }
}
